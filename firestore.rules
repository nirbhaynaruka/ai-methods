rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to clients collection
    match /clients/{document} {
      allow read: if true;
    }

    // Allow read/write access to client onboarding submissions
    match /clientOnboardingSubmissions/{document} {
      allow read, write: if true;
    }

    // Allow read/write access to progress tracker
    match /progress_tracker/{document} {
      allow read, write: if true;
    }

    // Allow read access to testimonials collection
    match /testimonials/{document} {
      allow read: if true;
    }

    // Deny all other access by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
